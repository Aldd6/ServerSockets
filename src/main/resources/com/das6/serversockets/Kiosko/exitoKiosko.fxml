<AnchorPane onMouseDragged="#onMouseDragged" onMousePressed="#onMousePressed" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.das6.serversockets.controller.kiosko.KioskoController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="1080.0" style="-fx-background-color: #466276;">
            <children>
                <Label prefHeight="34.0" prefWidth="1005.0" text="Control de Tickets" textFill="WHITE">
                    <HBox.margin>
                        <Insets left="15.0" />
                    </HBox.margin>
                </Label>
                <FontIcon fx:id="btnMinimizar" iconColor="WHITE" iconLiteral="bi-dash" iconSize="28" wrappingWidth="27.0" />
                <FontIcon fx:id="btnCerrar" iconColor="WHITE" iconLiteral="bi-x" iconSize="28" wrappingWidth="27.0" />
            </children>
        </HBox>
        <VBox alignment="CENTER" layoutY="32.0" prefHeight="687.0" prefWidth="1080.0">
            <children>
                <HBox alignment="BOTTOM_CENTER" prefHeight="29.0" prefWidth="1050.0">
                    <children>
                        <Label fx:id="lblMensaje" alignment="CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="1055.0" stylesheets="@main.css" text="Ticket generado exitosamente">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="34.0" prefWidth="1050.0">
                    <children>
                        <Label fx:id="lbNumeroTicket" alignment="TOP_CENTER" prefHeight="68.0" prefWidth="1050.0" stylesheets="@main.css" text="AA01">
                            <font>
                                <Font name="System Bold" size="64.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            <HBox alignment="CENTER" prefHeight="78.0" prefWidth="1050.0">
               <children>
                  <FontIcon fill="#198754" iconLiteral="bi-check-circle">
                     <font>
                        <Font size="64.0" />
                     </font>
                  </FontIcon>
               </children>
            </HBox>
            </children>
            <padding>
                <Insets left="15.0" right="15.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
